  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Mixshare</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/stylesheets/main.css?<%= Time.now.strftime("%d-%m-%Y-%k-%M") %>" />
  </head>
  
  <body>
    <div class="wrapper">
      <div class="container">
        <%= "<div class='notice'>#{flash[:notice]}</div>" if flash[:notice] %>

        <nav>
          <% if logged_in? %>
          Logged in as: <%= current_user.email %> | 
          <a href="/playlists/new">New Playlist</a> |
          <a href="/logout">Logout</a>
          <% else %>
          <a href="/register">Register</a> |
          <a href="/login">Login</a>
          <% end %>
        </nav>

        <%= yield %>

        <footer class="branding">
          <small>&copy; 2020 <strong>Mixshare</strong></small>
        </footer>
      </div>

    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
    <!--[if lt IE 7]>
      <script src="//ajax.googleapis.com/ajax/libs/chrome-frame/1.0.2/CFInstall.min.js"></script>
      <script>window.attachEvent("onload",function(){CFInstall.check({mode:"overlay"})})</script>
    <![endif]-->
  </body>
</html>
