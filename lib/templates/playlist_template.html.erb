  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

    <title>Mixshare</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <style>
    body{
    width: 100%;
    font-family: Roboto, Arial, sans-serif;
    }
    section{
      height: 80%;
      display: flex;
      justify-content: center;
      align-items: center;
      text-align: center;  
    }
    h1{
      display: block;
    }
    audio{
      display: block;
    }
    </style>
  </head>

  <body>
  <section>
    <div>
      <h1><%= playlist.name %></h1>
        
      <% playlist.songs.each do |song| %>
      <article>
        <p>
          <audio controls>
          <source src="<%= song.url %>" type="audio/mpeg">
        </audio>
        </p>
        <h2><a href="<%= song.url %>">Download</a></h2>
      </article>
      <% end %>
    </div>
  </section>
  </body>